<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suppressions PUBLIC
        "-//Puppy Crawl//DTD Suppressions 1.1//EN"
        "http://users.tpg.com.au/ojburn/dtds/suppressions_1_1.dtd">

<suppressions>
    <!-- Suppress MagicNumberCheck and MethodName for files under test -->
    <suppress checks="MagicNumberCheck" files=".*[/\\]test[/\\].*"/>
    <suppress checks="MethodName" files=".*[/\\]test[/\\].*"/>

    <!-- Suppress Javadoc for files under rebind and test -->
    <suppress checks="JavadocMethod" files=".*[/\\]test[/\\].*"/>
    <suppress checks="JavadocType" files=".*[/\\]test[/\\].*"/>

    <suppress checks="JavadocMethod" files=".*[/\\]rebind[/\\].*"/>
    <suppress checks="JavadocType" files=".*[/\\]rebind[/\\].*"/>

    <!-- Suppress files under target -->
    <suppress checks=".*" files=".*[/\\]target[/\\].*"/>

    <!-- Suppress files under com/google -->
    <suppress checks=".*" files="com[/\\]google[/\\]"/>
</suppressions>
