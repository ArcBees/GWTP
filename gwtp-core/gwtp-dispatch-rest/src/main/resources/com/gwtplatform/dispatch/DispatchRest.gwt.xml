<module>
    <inherits name="com.gwtplatform.dispatch.Dispatch"/>
    <inherits name='com.gwtplatform.dispatch.DispatchShared'/>

    <inherits name="com.google.gwt.http.HTTP"/>
    <inherits name="name.pehl.piriti.json.JSON"/>

    <!-- Specify the paths for translatable code                    -->
    <source path='client'/>
    <source path='shared'/>

    <generate-with class="com.gwtplatform.dispatch.rebind.RestServiceGenerator">
        <when-type-assignable class="com.gwtplatform.dispatch.shared.rest.RestService"/>
    </generate-with>

    <generate-with class="com.gwtplatform.dispatch.rebind.SerializerProviderGenerator">
        <when-type-is class="com.gwtplatform.dispatch.client.rest.SerializerProvider"/>
    </generate-with>
</module>
