        <!--<cglib.version>2.2</cglib.version>-->
    </properties>

    <repositories>
        <repository>
            <id>Google guice repository</id>
            <url>http://guice-maven.googlecode.com/svn/trunk</url>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
        <repository>
            <id>Custom Compiled dependencies</id>
            <url>file:///tmp/mvnrepo</url>
            <snapshots>
                <enabled>true</enabled>
            </snapshots>
            <releases>
                <enabled>true</enabled>
            </releases>
        </repository>
    </repositories>

    <build>
