<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .root {
            width: 500px;
            margin-left: auto;
            margin-right: auto;
        }

        .gwtp {
            margin-bottom: 15px;
        }

        .label {
            font-weight: bold;
        }

        .label-error {
            color: red;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">

        <h1>GWTP Basic Example</h1>
        <div class="{style.gwtp}">
            <a href="https://github.com/ArcBees/GWTP">Project Home</a>
            <br/>
            <a href="https://github.com/ArcBees/GWTP-Samples/tree/master/gwtp-samples/gwtp-sample-basic">Source</a>
            <br/>
        </div>

        <div class="{style.label}">Please enter your name:</div>
        <g:TextBox ui:field="nameField"/>
        <g:Button ui:field="sendButton">Send</g:Button>
        <g:HTML ui:field="error" styleName="{style.label-error}"/>

    </g:HTMLPanel>
</ui:UiBinder>

