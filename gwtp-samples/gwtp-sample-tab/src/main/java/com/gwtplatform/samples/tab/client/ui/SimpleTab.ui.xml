<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
    xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:style src='../../defines.css'
        type='com.gwtplatform.samples.tab.client.ui.BaseTab.Style'>
            .tab {
                float: left;
                margin-right: 8px;
                padding: 2px 13px;
            }
            
            .active {
                background-color: lightPanelColor;
                font-weight: bold;
            }
            
            .inactive {
                background-color: darkPanelColor;
                font-weight: bold;
            }
            
            .active a,.active a:visited,.active a:hover {
                text-decoration: none;
                color: black;
            }
        </ui:style>

    <g:Hyperlink addStyleNames="{style.tab} {style.inactive}"
        ui:field="hyperlink" />

</ui:UiBinder>