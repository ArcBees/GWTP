<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder" xmlns:g="urn:import:com.google.gwt.user.client.ui">
    <ui:style>
        .root {
            width: 500px;
            margin-left: auto;
            margin-right: auto;
        }
        
        .label {
            font-weight: bold;
        }
    </ui:style>
    <g:HTMLPanel styleName="{style.root}">
    
        <h1>Remote Procedure Call</h1>
        
        <div class="{style.label}">Sending name to server:</div>
        <g:HTML ui:field="textToServer"/>  
        
        <div class="{style.label}">Server replies:</div>
        <g:HTML ui:field="serverResponse"/>

        <g:Button ui:field="closeButton">Close</g:Button>
    
    </g:HTMLPanel>
</ui:UiBinder> 
