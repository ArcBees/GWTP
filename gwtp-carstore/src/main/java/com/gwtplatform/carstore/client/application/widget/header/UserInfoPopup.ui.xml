<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:style>
        .userInfoWrapper {
            font-size: 1.2em;
            width: 200px;
        }

        .welcomMessage {
            padding: 10px;
            border-bottom: 1px #aeaeae solid;
        }

        .logoutWrapper {
            padding: 10px;
            text-align: center;
        }

        .logoutButton {
            padding: 8px 18px;
            background-color: #08b3d8;
            -moz-border-radius: 6px;
            -webkit-border-radius: 6px;
            border-radius: 6px;
            color: #ffffff;
            font-weight: bold;
            border: none;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.userInfoWrapper}">
        <div class="{style.welcomMessage}">
            Hello, <g:InlineLabel ui:field="username"/>
        </div>
        <div class="{style.logoutWrapper}">
            <g:Button text="Logout" debugId="logout" ui:field="logout" styleName="{style.logoutButton}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
