<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>

    <ui:import field="com.gwtplatform.carstore.client.place.NameTokens.*"/>

    <ui:with field="resource" type="com.gwtplatform.carstore.client.resources.AppResources"/>

    <ui:style>
        .header {
            border-bottom: 1px solid #45a0ec;
        }

        .headerContent {
            width: 1000px;
            margin: 0px auto;
            padding: 5px 0px;
        }

        .applicationTitle {
            padding-top: 10px;
            font-size: 16px;
            font-weight: bold;
            padding-left: 10px;
            padding-top: 15px;
        }

        .userInfo {
            float: left;
            padding-top: 6px;
            padding-right: 20px;
            margin-right: 11px;
            border-right: 1px solid #aeaeae;
        }

        .userName {
            font-weight: bold;
        }

        .logoutButton {
            background: none;
            border: none;
            color: #45a0ec;
            font-size: 14px;
        }

        .logoutButton:hover {
            text-decoration: underline;
            color: #1d6098;
        }

        .menuBarWrapper {
            margin-left: 30px;
            padding-top: 10px;
        }

        .floatLeft {
            float: left;
        }

        .floatRight {
            float: right;
        }

        .paddingTop {
            margin-top: 10px;
        }

        .clear {
            clear: both;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.header}">
        <div class="{style.headerContent}">
            <div class="{style.floatLeft}">
                <g:Image resource="{resource.logo}"/>
            </div>

            <div class="{style.floatLeft} {style.applicationTitle}">
                <g:Label text="CarStore"/>
            </div>

            <g:HTMLPanel styleName="{style.floatLeft} {style.menuBarWrapper}" ui:field="menubar" debugId="menubar">
                <g:InlineHyperlink targetHistoryToken="{MANUFACTURER}">Manufacturers</g:InlineHyperlink>
                <g:InlineHyperlink targetHistoryToken="{CARS}">Cars</g:InlineHyperlink>
                <g:InlineHyperlink targetHistoryToken="{RATING}">Ratings</g:InlineHyperlink>
                <g:InlineHyperlink targetHistoryToken="{REPORT}">Reports</g:InlineHyperlink>
                <g:InlineHyperlink targetHistoryToken="{STATS}">Statistics</g:InlineHyperlink>
            </g:HTMLPanel>

            <g:HTMLPanel ui:field="userOptions" styleName="{style.floatRight} {style.paddingTop}">
                <div class="{style.userInfo}">
                    Hello
                    <g:InlineLabel ui:field="name" styleName="{style.userName}"/>
                    !
                </div>

                <div class="{style.floatLeft}">
                    <g:Button ui:field="logout" debugId="logout" text="Logout"
                              styleName="{style.logoutButton}"/>
                </div>

                <div class="{style.clear}"/>
            </g:HTMLPanel>

            <div class="{style.clear}"/>
        </div>
    </g:HTMLPanel>
</ui:UiBinder>
