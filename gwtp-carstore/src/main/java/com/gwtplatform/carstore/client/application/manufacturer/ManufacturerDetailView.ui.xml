<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
             xmlns:g='urn:import:com.google.gwt.user.client.ui'>
    <ui:with field="resource" type="com.gwtplatform.carstore.client.resources.AppResources"/>

    <ui:style>
        .panelWrapper {
            padding: 10px;
            padding-top: 20px;
        }
    </ui:style>

    <g:HTMLPanel styleName="{style.panelWrapper}">
        <g:TextBox ui:field="name" styleName="{resource.styles.mobileTextField}"/>
    </g:HTMLPanel>
</ui:UiBinder>
